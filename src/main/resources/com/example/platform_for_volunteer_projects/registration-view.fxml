<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.platform_for_volunteer_projects.RegistrationController">
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">
        <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Регистрация" />
        <TextField fx:id="regNameField" promptText="Имя" />
        <TextField fx:id="regEmailField" promptText="Email" />
        <PasswordField fx:id="regPasswordField" promptText="Пароль" />
        <ComboBox fx:id="roleComboBox" prefHeight="26.0" prefWidth="556.0" promptText="Роль">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Организатор" />
                    <String fx:value="Волонтер" />
                </FXCollections>
            </items>
        </ComboBox>
        <Button fx:id="buttonLogin" onAction="#handleRegistration" text="Зарегистрироваться" />
    </VBox>
</AnchorPane>
